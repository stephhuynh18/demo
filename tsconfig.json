{
  "compilerOptions": {
    "lib": ["dom", "es2017"],
    "strict": true,
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": "./packages",
    "outDir": "lib",
    "rootDir": "src",
    "skipLibCheck": true,
    "module": "ES2020",
    "target": "ES2020",
    "resolveJsonModule": false,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true
  },
  "include": ["./src/**/*"]
}
